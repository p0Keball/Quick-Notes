{
  "manifest_version": 3,
  "name": "Web Note",
  "version": "1.0.0",
  "description": "Taking notes fast across web",
  "permissions": ["storage", "activeTab", "tabs", "sidePanel"],
  "icons": {
    "16": "img/logo.png",
    "48": "img/logo.png"
  },
  "action": {
    "default_title": "Open Web Note",
    "default_icon": {
      "16": "img/logo.png",
      "48": "img/logo.png"
    }
  },
  "side_panel": {
    "default_path": "MainPage.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
